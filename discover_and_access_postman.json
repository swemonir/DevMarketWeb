{
    "info": {
        "_postman_id": "discover-access-focused",
        "name": "DevMark Discover & Profile Access",
        "description": "Focused collection for Discover feature and Private Project Access in profile.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Discovery Feature",
            "item": [
                {
                    "name": "1. Public Discover (Everyone)",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/discover",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "discover"
                            ]
                        },
                        "description": "Shows only approved/marketplace projects."
                    },
                    "response": []
                },
                {
                    "name": "2. Personalized Discover (Logged In)",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{authToken}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/discover",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "discover"
                            ]
                        },
                        "description": "Prioritizes projects matching user interests."
                    },
                    "response": []
                },
                {
                    "name": "3. Discovery Suggestions",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/discover/suggestions",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "discover",
                                "suggestions"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Profile Access Control (Own Data)",
            "item": [
                {
                    "name": "1. My Private Feed (All States)",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{authToken}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/projects",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "projects"
                            ]
                        },
                        "description": "Returns your OWN drafts/pending projects + all system marketplace projects."
                    },
                    "response": []
                },
                {
                    "name": "2. View My Drafts",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{authToken}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/projects/status/draft",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "projects",
                                "status",
                                "draft"
                            ]
                        },
                        "description": "Only researchers can see their own drafts."
                    },
                    "response": []
                },
                {
                    "name": "3. View My Pending Projects",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{authToken}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/projects/status/pending",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "projects",
                                "status",
                                "pending"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "4. View My Rejected Projects",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{authToken}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/projects/status/rejected",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "projects",
                                "status",
                                "rejected"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:5000",
            "type": "string"
        },
        {
            "key": "authToken",
            "value": "YOUR_USER_TOKEN",
            "type": "string"
        }
    ]
}