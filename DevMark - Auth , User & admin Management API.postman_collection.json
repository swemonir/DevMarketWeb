  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "console.log('ðŸš€ Running request: ' + pm.request.name);",
          "console.log('ðŸŒ URL: ' + pm.request.url.toString());",
          "console.log('ðŸ”‘ Token: ' + pm.environment.get('access_token') ? 'Set' : 'Not set');"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Common response tests",
          "pm.test(\"Response time is acceptable\", function () {",
          "    pm.expect(pm.response.responseTime).to.be.below(3000);",
          "});",
          "",
          "pm.test(\"Response has correct content type\", function () {",
          "    pm.response.to.have.header(\"Content-Type\", \"application/json; charset=utf-8\");",
          "});",
          "",
          "// For 2xx responses",
          "if (pm.response.code >= 200 && pm.response.code < 300) {",
          "    pm.test(\"Status code is successful\", function () {",
          "        pm.response.to.be.success;",
          "    });",
          "    ",
          "    // Check response structure",
          "    const jsonData = pm.response.json();",
          "    if (jsonData) {",
          "        pm.test(\"Response has success field\", function () {",
          "            pm.expect(jsonData).to.have.property(\"success\");",
          "        });",
          "    }",
          "}",
          "",
          "// For 4xx responses",
          "if (pm.response.code >= 400 && pm.response.code < 500) {",
          "    pm.test(\"Client error response\", function () {",
          "        pm.response.to.be.clientError;",
          "    });",
          "}",
          "",
          "// Auto-save user ID from any response with user data",
          "const jsonData = pm.response.json();",
          "if (jsonData && jsonData.user && jsonData.user.id) {",
          "    pm.environment.set(\"user_id\", jsonData.user.id);",
          "    ",
          "    // Set role-specific IDs",
          "    if (jsonData.user.role === \"seller\") {",
          "        pm.environment.set(\"seller_id\", jsonData.user.id);",
          "    }",
          "    if (jsonData.user.role === \"buyer\") {",
          "        pm.environment.set(\"buyer_id\", jsonData.user.id);",
          "    }",
          "}"
        ]
      }
    }
